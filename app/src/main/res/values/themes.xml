<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lab4widgets" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        // i have changed the styles of button like borderradius and bacground color
        // which is the style by which i directly called the view
        <item name="materialButtonStyle">@style/buttonstyles</item>
    </style>




    <style name="regulartext">
        <item name="android:background">@color/light_red</item>
    </style>
    <style name="buttonstyles" parent="android:Widget.Button">
        <item name="android:background">@color/teal_200</item>
        <item name="cornerRadius">20dp</item>

    </style>
</resources>